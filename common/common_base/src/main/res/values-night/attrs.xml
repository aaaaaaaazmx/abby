<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VerificationCodeView">
        <attr name="vcv_length" format="integer" />
        <attr name="vcv_cursorColor" format="color" />
        <attr name="vcv_cursorWidth" format="dimension" />
        <attr name="vcv_outlook" format="enum">
            <enum name="line" value="0" />
            <enum name="rect" value="1" />
        </attr>
        <attr name="vcv_outlookStrokeWidth" format="dimension" />
        <attr name="vcv_outlookStrokeNormalColor" format="color" />
        <attr name="vcv_outlookStrokeActiveColor" format="color" />
        <attr name="vcv_perSpacing" format="dimension" />
        <attr name="vcv_outlookBackgroundColor" format="color" />
        <attr name="cvc_outlookRadius" format="dimension" />
        <attr name="cvc_passwordStyle" format="boolean" />
    </declare-styleable>

    <!--标题栏-->
    <declare-styleable name="FeatureTitleBar">
        <attr name="title" />
    </declare-styleable>


    <!--ToolBar-->
    <style name="toolBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:homeAsUpIndicator">@mipmap/left</item>
        <item name="android:titleTextStyle">@style/titlestyle</item>
    </style>
    <style name="titlestyle">
        <item name="android:textSize">12sp</item>
    </style>

    <declare-styleable name="SvTextView">
        <!-- 背景填充色类型 -->
        <attr name="svSolidType">
            <!-- 默认 -->
            <enum name="system_default" value="0"/>
            <!-- 纯色 -->
            <enum name="solid" value="1"/>
            <!-- 渐变 -->
            <enum name="gradient" value="2"/>
        </attr>
        <!-- 背景填充色 -->
        <attr name="svSolidColor" format="color|reference" />
        <!-- 背景填充开始渐变色 -->
        <attr name="svGradientStartColor" format="color" />
        <!-- 背景填充结束始渐变色 -->
        <attr name="svGradientEndColor" format="color" />
        <!-- 渐变方向 -->
        <attr name="svGradientOrientation">
            <!-- 从顶部到底部绘制渐变 -->
            <enum name="top_bottom" value="0" />
            <!-- 从右上到左下绘制渐变 -->
            <enum name="tr_bl" value="1" />
            <!-- 从右向左绘制渐变 -->
            <enum name="right_left" value="2" />
            <!-- 从右下到左上绘制渐变 -->
            <enum name="br_tl" value="3" />
            <!-- 从底部到顶部绘制渐变 -->
            <enum name="bottom_top" value="4" />
            <!-- 从左下角到右上角绘制渐变 -->
            <enum name="bl_tr" value="5" />
            <!-- 从左到右绘制渐变 -->
            <enum name="left_right" value="6" />
            <!-- 从左上角到右下角绘制渐变 -->
            <enum name="tl_br" value="7" />
        </attr>
        <!-- 背景填充渐变色类型 -->
        <attr name="svGradientType">
            <!-- 线性渐变, 默认 -->
            <enum name="linear" value="0" />
            <!-- 发散渐变 -->
            <enum name="circular" value="1" />
            <!-- 平铺渐变 -->
            <enum name="sweep" value="2" />
        </attr>
        <!-- 边框类型, 默认为实线 -->
        <attr name="svStrokeType">
            <!-- 没有 -->
            <enum name="none" value="0" />
            <!-- 实线 -->
            <enum name="line" value="1" />
            <!-- 虚线 -->
            <enum name="dash" value="2" />
        </attr>
        <!-- 边框色 -->
        <attr name="svStrokeColor" format="color" />
        <!-- 边框粗细 -->
        <attr name="svStrokeWidth" format="dimension" />
        <!-- 边框虚线宽度 -->
        <attr name="svStrokeDashWidth" format="dimension" />
        <!-- 边框虚线间距 -->
        <attr name="svStrokeDashGap" format="dimension" />
        <!-- 全部角度 -->
        <attr name="svRadius" format="dimension" />
        <!-- 左上角度 -->
        <attr name="svTopLeftRadius" format="dimension" />
        <!-- 左下角度 -->
        <attr name="svBottomLeftRadius" format="dimension" />
        <!-- 右上角度 -->
        <attr name="svTopRightRadius" format="dimension" />
        <!-- 右下角度 -->
        <attr name="svBottomRightRadius" format="dimension" />
    </declare-styleable>


    <declare-styleable name="VerificationCodeInputView">
        <!--输入框的数量-->
        <attr name="vciv_et_number" format="integer" />
        <!--输入类型-->
        <attr name="vciv_et_inputType">
            <enum name="number" value="0" />
            <enum name="numberPassword" value="1" />
            <enum name="text" value="2" />
            <enum name="textPassword" value="3" />
        </attr>
        <!--输入框的宽度-->
        <attr name="vciv_et_width" format="dimension" />
        <!--输入框的高度-->
        <attr name="vciv_et_height" format="dimension" />
        <!--输入框文字颜色-->
        <attr name="vciv_et_text_color" format="color" />
        <!--输入框文字大小-->
        <attr name="vciv_et_text_size" format="dimension" />
        <!--输入框间距，不输入则代表平分-->
        <attr name="vciv_et_spacing" format="dimension" />
        <!--输入框背景色-->
        <attr name="vciv_et_background" format="reference|color" />
        <!--输入框焦点背景色-->
        <attr name="vciv_et_foucs_background" format="reference|color" />
        <!--输入框焦点宽度-->
        <attr name="vciv_et_cursor_width" format="dimension" />
        <!--输入框焦点高度-->
        <attr name="vciv_et_cursor_height" format="dimension" />
        <!--输入框焦点颜色-->
        <attr name="vciv_et_cursor_color" format="color" />
        <!--输入框下划线高度-->
        <attr name="vciv_et_underline_height" format="dimension" />
        <!--输入框无焦点的下划线颜色-->
        <attr name="vciv_et_underline_default_color" format="color" />
        <!--输入框有焦点的下划线颜色-->
        <attr name="vciv_et_underline_focus_color" format="color" />
        <!--输入框下划线是否展示-->
        <attr name="vciv_et_underline_show" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RippleView">
        <attr name="ripple_circle_color" format="color" />
        <attr name="ripple_circle_min_radius" format="dimension" />
        <attr name="ripple_circle_count" format="integer" />
        <attr name="ripple_circle_style" format="enum">
            <enum name="FILL" value="0" />
            <enum name="STROKE" value="1" />
        </attr>
        <attr name="ripple_speed" format="float" />
        <attr name="ripple_circle_stroke_width" format="dimension" />
        <attr name="ripple_circle_start" format="boolean" />
    </declare-styleable>
</resources>