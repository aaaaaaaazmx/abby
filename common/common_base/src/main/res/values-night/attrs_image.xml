<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义属性 -->
    <declare-styleable name="UserClipViewLayout">
        <attr name="userClipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="userHorizontalPadding" format="dimension" />
        <attr name="userClipBorderWidth" format="dimension" />
        <attr name="userRectangleWidth" format="dimension" />
        <attr name="userRectangleHeight" format="dimension" />
    </declare-styleable>


    <declare-styleable name="UserCircleImageView">
        <attr name="user_border_width" format="dimension" />
        <attr name="user_border_color" format="color" />
        <attr name="user_border_overlay" format="boolean" />
        <attr name="user_fill_color" format="color" />
    </declare-styleable>

</resources>