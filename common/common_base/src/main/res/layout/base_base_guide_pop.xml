<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/home_pair_bg"
        tools:ignore="MissingConstraints">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_calendar_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here to access your growing calendar and view upcoming tasks"
            android:textSize="15sp" />

        <Button
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_success"
            android:layout_width="80dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_calendar_desc"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/create_state_button"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Done" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>