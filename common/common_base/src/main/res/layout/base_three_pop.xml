<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round"
        android:orientation="vertical"
        android:paddingTop="16dp">


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingTop="15dp"
            android:paddingEnd="14dp"
            android:paddingBottom="5dp"
            android:text="Are you sure to sign out of account?"
            android:textColor="@color/_xpopup_content_color"
            android:textSize="16sp" />


        <View
            android:id="@+id/xpopup_divider1"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginTop="20dp"
            android:background="@color/_xpopup_list_divider" />

        <LinearLayout
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Cancel"
                android:textColor="@color/mainColor"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/_xpopup_list_divider" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/my_confirm"
                android:textColor="@color/mainColor"
                android:textSize="18sp" />

            <View
                android:id="@+id/vv_three"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/_xpopup_list_divider" />

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Cancel"
                android:textColor="@color/mainColor"
                android:textSize="18sp" />


            <View
                android:id="@+id/vv_four"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/_xpopup_list_divider" />

            <TextView
                android:id="@+id/tv_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Cancel"
                android:textColor="@color/mainColor"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</layout>