<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.cl.common_base.widget.wheel.time.ScopePicker
        android:id="@+id/scopePicker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:halfVisibleItemCount="1"
        app:wheelCyclic="false" />

    <View
        android:id="@+id/v_line"
        android:layout_width="2dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:background="#F5F5F7"
        android:visibility="visible" />

    <com.cl.common_base.widget.wheel.time.ScopeTimePicker
        android:id="@+id/hourPicker_layout_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:halfVisibleItemCount="2"
        app:wheelCyclic="false" />

    <View
        android:layout_width="2dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:background="#F5F5F7"
        android:visibility="gone" />

    <com.cl.common_base.widget.wheel.time.MinutePicker
        android:visibility="gone"
        android:id="@+id/minutePicker_layout_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:halfVisibleItemCount="2"
        app:wheelCyclic="false" />

</LinearLayout>