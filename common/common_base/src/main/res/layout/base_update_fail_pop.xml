<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:textColor="@color/mainColor"
            android:text="Upgrade failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="14dp"
            android:paddingTop="15dp"
            android:paddingEnd="14dp"
            android:paddingBottom="5dp"
            tools:text="* The upgrade may take a few minutes, and the device will not work during the upgrade process.
* Please do not power off or reset during the update"
            android:textColor="@color/_xpopup_content_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/_xpopup_content_color"
            android:textColorHint="#999999"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/xpopup_divider1"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginTop="20dp"
            android:background="@color/_xpopup_list_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/mainColor"
                android:textSize="18sp" />

            <View
                android:id="@+id/xpopup_divider2"
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/_xpopup_list_divider" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Retry"
                android:textColor="@color/mainColor"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</layout>