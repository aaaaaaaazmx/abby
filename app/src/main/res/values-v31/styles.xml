<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StartAppTheme" parent="Theme.SplashScreen">
        <!--启动画面背景颜色-->
        <item name="windowSplashScreenBackground">@color/mainColor</item>
        <!-- 启动画面icon图标：这里可以是图片、帧动画等-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/layout_start_background</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/mainColor</item>
        <item name="android:windowSplashScreenBrandingImage">
            @drawable/layout_start_brand_background
        </item>
        <!-- icon动画在关闭之前显示的时长：最长时间为1000毫秒-->
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!-- Splash退出后的主题-->
        <item name="postSplashScreenTheme">@style/Theme.Abby</item>
    </style>
</resources>