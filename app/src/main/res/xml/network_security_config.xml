        <trust-anchors>
            <certificates src="system" overridePins="true" /> <!--信任系统证书-->
<!--            <certificates src="user" overridePins="true" /> &lt;!&ndash;信任用户证书&ndash;&gt;-->
        </trust-anchors>
    </base-config>
</network-security-config>