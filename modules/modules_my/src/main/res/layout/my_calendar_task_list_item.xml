<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="taskData"
            type="com.cl.common_base.bean.CalendarData.TaskList" />

        <import type="android.view.View"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginStart="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivTaskIcon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/base_dot_academy_task" />


        <TextView
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivTaskIcon"
            app:layout_constraintTop_toTopOf="@+id/ivTaskIcon"
            android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@id/ivTaskIcon"
            tools:text="15dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:id="@+id/tvTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@+id/tvTaskName"
            app:layout_constraintBottom_toBottomOf="@+id/tvTaskName"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@+id/tvTaskName"
            android:id="@+id/iv_gt"
            android:background="@mipmap/base_wen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.cl.common_base.widget.SvTextView
            android:visibility='@{taskData.taskAction.equals("none") ? View.GONE: View.VISIBLE}'
            android:layout_marginTop="2dp"
            android:layout_marginEnd="21dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTaskName"
            app:layout_constraintTop_toTopOf="@+id/tvTaskName"
            android:id="@+id/svt_gray_unlock"
            android:layout_width="64dp"
            android:layout_height="25.38dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:svRadius="100dp"
            app:svSolidColor="#C4C4C4"
            app:svSolidType="solid"
            android:text='@{taskData.taskAction.equals("drain") ? @string/my_drain : taskData.taskAction.equals("unlock_period") ? @string/string_284 : ""}'
            tools:text="@string/string_284" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvTaskName"
            android:background="@mipmap/back_sub_list_bg"
            app:layout_constraintTop_toBottomOf="@+id/tvTaskName"
            android:layout_marginTop="13dp"
            android:id="@+id/rvSubTaskList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>