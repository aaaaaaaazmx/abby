<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.cl.common_base.bean.ListDeviceBean" />

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginBottom="13dp"
        android:layout_marginTop="13dp"
        tools:ignore="MissingConstraints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            app:layout_constraintBottom_toBottomOf="@+id/cl_sort"
            app:layout_constraintTop_toTopOf="@+id/cl_sort"
            android:id="@+id/tv_device_name"
            android:text='@{data.textDesc}'
            tools:text="123123"
            android:textSize="15sp"
            android:textColor="#979797"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="@{data.textDesc.equals(@string/string_1790) ? View.VISIBLE : View.INVISIBLE}"
            android:id="@+id/cl_sort"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="111dp"
            android:layout_height="wrap_content">

            <com.cl.common_base.widget.SvTextView
                app:svRadius="3dp"
                app:svSolidColor="@color/white"
                app:svStrokeWidth="1dp"
                app:svStrokeType="line"
                app:svStrokeColor="#E5E5E5"
                android:layout_width="match_parent"
                android:layout_height="26dp"/>

            <TextView
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:autoSizeMaxTextSize="11sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_down"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                tools:text="1231231231231231231231233123123123"
                android:textColor="@color/mainColor"
                android:text="@{data.shortText}"
                android:textSize="11sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_down"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@mipmap/contact_down_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>