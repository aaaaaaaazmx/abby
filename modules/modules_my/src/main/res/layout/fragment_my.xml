<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_head"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:background="@mipmap/my_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                tools:background="@mipmap/ic_launcher_round" />

            <TextView
                android:visibility="gone"
                android:id="@+id/nohead_show"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:background="@drawable/my_head_bg"
                android:textColorHint="@color/mainColor"
                android:text="P"
                android:textSize="40sp"
                android:layout_width="64dp"
                android:layout_height="64dp"/>

            <LinearLayout
                android:id="@+id/ll_root"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/iv_head"
                app:layout_constraintTop_toTopOf="@id/iv_head"
                app:layout_constraintBottom_toBottomOf="@id/iv_head"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    tools:text="Path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_email"
                    tools:text="2192292392@qq.com"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/rl_edit"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/ll_root"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/ll_root"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/my_edit"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_messgae"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/cl_head"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_message"
                android:background="@mipmap/my_message"
                android:layout_width="22dp"
                android:layout_height="22dp"/>

            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="14dp"
                app:layout_constraintLeft_toRightOf="@+id/iv_message"
                android:textColor="#161B19"
                android:text="Message Center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:layout_constraintBottom_toBottomOf="@+id/iv_right_message"
                app:layout_constraintTop_toTopOf="@+id/iv_right_message"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_right_message"
                android:background="@mipmap/my_iv_red_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="20dp"
                android:id="@+id/iv_right_message"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@mipmap/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="8dp"
            android:id="@+id/cl_setting"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/cl_messgae"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_setting"
                android:background="@mipmap/my_setting"
                android:layout_width="22dp"
                android:layout_height="20dp"/>

            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="14dp"
                app:layout_constraintLeft_toRightOf="@+id/iv_setting"
                android:textColor="#161B19"
                android:text="Settings"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="20dp"
                android:id="@+id/iv_right_setting"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@mipmap/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            app:layout_constraintTop_toBottomOf="@+id/cl_setting"
            android:id="@+id/vv_line"
            android:background="#E5E5E5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_about"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/vv_line"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/iv_cl_about"
                android:background="@mipmap/my_about_us"
                android:layout_width="22dp"
                android:layout_height="22dp"/>

            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="14dp"
                app:layout_constraintLeft_toRightOf="@+id/iv_cl_about"
                android:textColor="#161B19"
                android:text="About us"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="20dp"
                android:id="@+id/iv_right_cl_about"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@mipmap/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>