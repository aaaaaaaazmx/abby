<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        tools:ignore="MissingConstraints"
        android:background="@drawable/bg_round_tl_tr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@mipmap/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_title"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_close"
            android:layout_marginEnd="27dp"
            android:layout_marginStart="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Redeemed Oxygen Coinsï¼š100
Account Balance: 800
E-Gift Value:$10

A e-gift card secrect code will send to your email[user email]"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/tv_description"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/background_button_main_color_r100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Confirm"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_width="0dp"
            android:layout_height="60dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>