<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:background="@drawable/background_white_r6"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/iv_close"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            app:layout_constraintBottom_toBottomOf="@+id/tv_value"
            app:layout_constraintTop_toTopOf="@+id/tv_value"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_title"
            android:text="@string/light_intensity"
            android:textColor="@color/mainColor"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_close"
            android:id="@+id/tv_value"
            android:layout_marginStart="10dp"
            tools:text="2"
            app:layout_constraintStart_toEndOf="@+id/tv_title"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/fan_intake_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:isb_indicator_color="@color/mainColor"
            app:isb_max="100"
            app:isb_progress="0"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_thumb_adjust_auto="true"
            app:isb_thumb_drawable="@mipmap/bbbbb"
            app:isb_thumb_size="27dp"
            app:isb_track_background_color="#99006241"
            app:isb_track_background_size="5dp"
            app:isb_track_progress_color="#008961"
            app:isb_track_progress_size="5dp"
            app:isb_track_rounded_corners="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_value"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:text="0%"
            app:layout_constraintTop_toBottomOf="@+id/fan_intake_seekbar"
            app:layout_constraintStart_toStartOf="@+id/fan_intake_seekbar"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="100%"
            app:layout_constraintTop_toBottomOf="@+id/fan_intake_seekbar"
            app:layout_constraintEnd_toEndOf="@+id/fan_intake_seekbar"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>