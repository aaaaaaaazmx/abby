<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:background="@color/white"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <com.cl.common_base.widget.FeatureTitleBar
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvTitle"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleBar"
                android:text="@string/home_select_your_starting_point"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/cl_period"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_period_name"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:text="@string/home_period_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textStyle="bold"
                    tools:text="stepShow"
                    android:id="@+id/tv_period"
                    app:layout_constraintEnd_toEndOf="@+id/tv_period_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_period_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_period_name"
                    android:textSize="24sp"
                    android:textColor="@color/mainColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_rv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_period"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="23dp"
                    android:layout_marginStart="23dp"
                    android:id="@+id/recyclerView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <View
                    android:visibility="gone"
                    android:id="@+id/vv_vvvv"
                    android:clickable="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#33aaaaaa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tvPeriodLength"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Period Length"
                android:layout_marginStart="24dp"
                android:layout_marginTop="61dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                app:layout_constraintEnd_toStartOf="@+id/rl_turn_end"
                app:layout_constraintStart_toStartOf="@+id/tvPeriodLength"
                app:layout_constraintTop_toBottomOf="@+id/tvPeriodLength"
                android:id="@+id/rl_turn_start"
                android:layout_width="0dp"
                android:minWidth="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/create_button_maincolor"
                >

                <TextView
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/mainColor"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:text="5:00 AM" />

                <View
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_toLeftOf="@+id/iv_turn_start"
                    android:background="#E4E4E499"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_marginEnd="9dp"
                    android:id="@+id/iv_turn_start"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/home_yb"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_turn_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rl_turn_start"
                app:layout_constraintTop_toBottomOf="@+id/tvPeriodLength"
                android:layout_width="0dp"
                android:minWidth="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/create_button_maincolor"
                >

                <TextView
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/mainColor"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:text="5:00 AM" />

                <View
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_toLeftOf="@+id/iv_turn_start_day"
                    android:background="#E4E4E499"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_marginEnd="9dp"
                    android:id="@+id/iv_turn_start_day"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/home_yb"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_total_day"
                android:layout_marginBottom="10dp"
                tools:text="*Total 28 Days（动态变化）"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/rl_turn_start"
                app:layout_constraintTop_toBottomOf="@+id/rl_turn_start"
                android:textColor="#4D4D4D"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_success"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/create_state_button"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>