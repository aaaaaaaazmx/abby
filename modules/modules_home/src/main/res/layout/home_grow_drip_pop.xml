<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.cl.common_base.bean.EnvironmentInfoData.Environment" />

        <variable
            name="adapter"
            type="com.cl.modules_home.adapter.HomeEnvirPopAdapter" />


        <import type="android.text.TextUtils"/>
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        tools:ignore="MissingConstraints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_kit"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Drip Kit"
            android:textColor="@color/mainColor"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <com.cl.common_base.widget.FeatureItemSwitch
            android:paddingBottom="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_kit"
            app:layout_constraintTop_toTopOf="@+id/tv_kit"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/transparent"
            android:id="@+id/fis_item_switchs"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:checked="false"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="@{data.dripKit ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@+id/fis_item_switchs"
            android:id="@+id/cl_drip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_half_gray_r8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
          >

            <TextView
                android:id="@+id/tv_drip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp"
                android:text="Drip Irrigation Timer"
                android:textColor="@color/mainColor"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/tv_drip_pump_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@mipmap/home_exclamation_mark"
                app:layout_constraintCircle="@+id/tv_drip"
                app:layout_constraintCircleAngle="84"
                app:layout_constraintCircleRadius="65dp"
                app:layout_constraintTop_toTopOf="parent"
                 />

            <ImageView
                android:id="@+id/iv_drip_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="21dp"
                android:background="@mipmap/home_chilun_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="@{data.dripKit ? View.VISIBLE : View.GONE}"
            android:id="@+id/cl_air_pump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/background_half_gray_r8"
            android:paddingStart="11dp"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_drip">

            <TextView
                android:id="@+id/tv_air_pump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Air Pump"
                android:textColor="@color/mainColor"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/tv_air_pump_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@mipmap/home_exclamation_mark"
                app:layout_constraintCircle="@+id/tv_air_pump"
                app:layout_constraintCircleAngle="84"
                app:layout_constraintCircleRadius="35dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cl.common_base.widget.FeatureItemSwitch
                switchItemBackground='@{"#F7F7F7"}'
                isItemCheck="@{data.airPump}"
                android:background="#f7f7f7"
                android:id="@+id/air_pump"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:hideArrow="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_air_pump"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_air_pump" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>