<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <com.cl.common_base.widget.FeatureTitleBar
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/task" />

            <TextView
                android:layout_marginStart="19dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleBar"
                android:id="@+id/taskTextView"
                android:text="@string/home_tasksss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@+id/taskTextView"
                android:id="@+id/cl_code_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/background_gray_r5"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="24"
                    android:maxLines="1"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_send_code"
                    android:paddingStart="12dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="change water" />


                <com.cl.common_base.widget.SvTextView
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/home_settings"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_clear_code"
                    app:layout_constraintTop_toTopOf="@+id/iv_clear_code"
                    app:layout_constraintEnd_toStartOf="@+id/iv_clear_code"
                    app:svSolidColor="@color/mainColor"
                    app:svRadius="180dp"
                    android:id="@+id/tv_send_code"
                    android:layout_width="72dp"
                    android:layout_height="28dp" />


                <ImageView
                    android:padding="5dp"
                    android:id="@+id/iv_clear_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="19dp"
                    android:background="@mipmap/iv_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:visibility="gone"
                android:layout_marginEnd="13dp"
                android:layout_marginStart="13dp"
                android:id="@+id/taskTextViews"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/cl_code_input"
                app:layout_constraintStart_toStartOf="@+id/cl_code_input"
                app:layout_constraintTop_toBottomOf="@+id/cl_code_input"
                tools:text="recurring Every recurring Every  recurring Every"
                android:textColor="#4D4D4D"
                android:textSize="10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginStart="19dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taskTextViews"
                android:id="@+id/taskDateTextView"
                android:text="@string/home_task_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_code_inputs"
                app:layout_constraintTop_toBottomOf="@+id/taskDateTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/background_gray_r5"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/et_emails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="24"
                    android:maxLines="1"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingStart="12dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="change water" />

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/iv_clear_codes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="19dp"
                    android:background="@mipmap/iv_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_code_inputs"
                android:id="@+id/recurringTaskTextView"
                android:textStyle="bold"
                android:layout_marginTop="74dp"
                android:layout_marginStart="19dp"
                android:text="@string/home_recurring_task"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            
            <com.cl.common_base.widget.FeatureItemSwitch
                android:id="@+id/recurringTaskSwitch"
                app:itemChecked="false"
                app:layout_constraintBottom_toBottomOf="@+id/recurringTaskTextView"
                app:layout_constraintTop_toTopOf="@+id/recurringTaskTextView"
                android:layout_marginEnd="19dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>


           <androidx.constraintlayout.widget.ConstraintLayout
               tools:visibility="visible"
               android:visibility="gone"
               android:id="@+id/cl_root"
               app:layout_constraintStart_toStartOf="@+id/recurringTaskTextView"
               app:layout_constraintTop_toBottomOf="@+id/recurringTaskTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="12dp"
                   android:id="@+id/recurringTaskTextViews"
                   android:textColor="@color/black"
                   android:text="@string/home_recurring_every"
                   android:textSize="14sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <com.cl.common_base.widget.SvTextView
                   android:layout_marginStart="5dp"
                   app:layout_constraintBottom_toBottomOf="@+id/recurringTaskTextViews"
                   app:layout_constraintTop_toTopOf="@+id/recurringTaskTextViews"
                   app:layout_constraintStart_toEndOf="@+id/recurringTaskTextViews"
                   android:gravity="center"
                   android:text="1"
                   app:svSolidColor="#F7F7F7"
                   app:svRadius="6dp"
                   android:id="@+id/tv_day"
                   android:layout_width="51dp"
                   android:layout_height="34dp"/>

               <TextView
                   android:layout_marginStart="5dp"
                   android:textSize="14sp"
                   android:textColor="@color/black"
                   android:text="@string/string_2123"
                   app:layout_constraintBottom_toBottomOf="@+id/tv_day"
                   app:layout_constraintTop_toTopOf="@+id/tv_day"
                   app:layout_constraintStart_toEndOf="@+id/tv_day"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_marginTop="27dp"
                   app:layout_constraintStart_toStartOf="@+id/recurringTaskTextViews"
                   app:layout_constraintTop_toBottomOf="@+id/recurringTaskTextViews"
                   android:textColor="@color/black"
                   android:text="@string/home_until"
                   android:textSize="14sp"
                   android:id="@+id/tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <com.cl.common_base.widget.SvTextView
                   android:id="@+id/tv_date"
                   android:layout_marginStart="5dp"
                   app:layout_constraintBottom_toBottomOf="@+id/tv"
                   app:layout_constraintTop_toTopOf="@+id/tv"
                   app:layout_constraintStart_toEndOf="@+id/tv"
                   android:textSize="14sp"
                   android:textColor="@color/black"
                   android:gravity="center"
                   tools:text="Sep,22"
                   app:svSolidColor="#F7F7F7"
                   app:svRadius="6dp"
                   android:layout_width="78dp"
                   android:layout_height="34dp"/>
           </androidx.constraintlayout.widget.ConstraintLayout>
            
            
            <com.cl.common_base.widget.SvTextView
                android:id="@+id/svt_cancel"
                app:layout_constraintEnd_toStartOf="@+id/svt_confirm"
                android:textColor="@color/mainColor"
                android:layout_marginBottom="36dp"
                android:layout_marginStart="19dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/my_cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:svStrokeColor="@color/mainColor"
                app:svStrokeWidth="1dp"
                app:svRadius="10dp"
                android:layout_width="0dp"
                android:layout_height="46dp"/>


            <com.cl.common_base.widget.SvTextView
                app:layout_constraintStart_toEndOf="@+id/svt_cancel"
                android:id="@+id/svt_confirm"
                android:textColor="@color/white"
                android:layout_marginBottom="36dp"
                android:layout_marginStart="19dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/string_1515"
                android:layout_marginEnd="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:svSolidColor="@color/mainColor"
                app:svStrokeWidth="1dp"
                app:svRadius="10dp"
                android:layout_width="0dp"
                android:layout_height="46dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>