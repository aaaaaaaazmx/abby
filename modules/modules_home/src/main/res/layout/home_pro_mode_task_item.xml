<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="taskData"
            type="com.cl.modules_home.request.Task" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_code_input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/background_gray_r5"
        tools:ignore="MissingConstraints">

        <TextView
            android:text="@{String.valueOf(taskData.taskName)}"
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="24"
            android:maxLines="1"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_send_code"
            android:paddingStart="12dp"
            android:singleLine="true"
            android:textColor="@color/mainColor"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TSL" />


        <com.cl.common_base.widget.SvTextView
            android:lines="1"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="13sp"
            android:autoSizeTextType="uniform"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/home_settings"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_clear_code"
            app:layout_constraintTop_toTopOf="@+id/iv_clear_code"
            app:layout_constraintEnd_toStartOf="@+id/iv_clear_code"
            app:svSolidColor="@color/mainColor"
            app:svRadius="180dp"
            android:id="@+id/tv_send_code"
            android:layout_width="72dp"
            android:layout_height="28dp" />


        <ImageView
            android:id="@+id/iv_clear_code"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="19dp"
            android:background="@mipmap/iv_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>