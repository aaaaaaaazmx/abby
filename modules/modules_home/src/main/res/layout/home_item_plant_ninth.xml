<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <data>

        <variable
            name="viewModel"
            type="com.cl.modules_home.viewmodel.HomeViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lineBg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="8"
            android:singleLine="true"
            android:text="hey Abby"
            android:textColor="@color/mainColor"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/iv_camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="@+id/iv_device_list"
            app:layout_constraintEnd_toStartOf="@+id/iv_device_list"
            android:background="@mipmap/home_camera_bg"
            android:id="@+id/iv_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            android:id="@+id/iv_device_list"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="24dp"
            android:background="@mipmap/home_device_list"
            app:layout_constraintEnd_toEndOf="@+id/iv_academy"
            app:layout_constraintEnd_toStartOf="@+id/iv_academy"
             />

        <ImageView
            android:id="@+id/iv_academy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="24dp"
            android:background="@mipmap/home_academy"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/iv_calendar"
            app:layout_constraintEnd_toStartOf="@+id/iv_calendar"
            app:layout_constraintTop_toTopOf="@+id/iv_calendar" />

        <!--android:visibility="@{viewModel.getHomePageNumber.data.academyMsgCount &lt;= 0 ? View.GONE : View.VISIBLE}"-->
        <View
            android:id="@+id/vv_academy"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/base_dot_red"
            android:visibility="gone"
            app:layout_constraintCircle="@id/iv_academy"
            app:layout_constraintCircleAngle="50"
            app:layout_constraintCircleRadius="20dp" />

        <ImageView
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            android:id="@+id/iv_calendar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="26dp"
            android:background="@mipmap/home_calendar_bg"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/red_bg"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="@{viewModel.getHomePageNumber.data.calendarLowMsgCount &lt;= 0 ? View.GONE : View.VISIBLE }"
            app:layout_constraintCircle="@id/iv_calendar"
            app:layout_constraintCircleAngle="50"
            app:layout_constraintCircleRadius="20dp" />

        <TextView
            android:id="@+id/vv_calendar_number"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:background="@drawable/red_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{String.valueOf(viewModel.getHomePageNumber.data.calendarHighMsgCount)}"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="@{viewModel.getHomePageNumber.data.calendarHighMsgCount &lt;= 0 ? View.GONE : View.VISIBLE}"
            app:layout_constraintCircle="@id/iv_calendar"
            app:layout_constraintCircleAngle="50"
            app:layout_constraintCircleRadius="20dp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:id="@+id/cl_plant_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">


            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="match_parent"
                android:layout_height="459dp"
                android:background="@mipmap/home_plant_three_bg" />

            <ImageView
                android:id="@+id/iv_water_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.5dp"
                android:alpha="0.15"
                android:background="@mipmap/home_max_water"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_bowl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@mipmap/home_week_twelve"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!--摄像头-->
            <RelativeLayout
                tools:visibility="gone"
                android:id="@+id/rl_bowl"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.thingclips.smart.camera.middleware.widget.ThingCameraView
                        android:id="@+id/camera_video_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <!-- 添加其他子视图 -->
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:id="@+id/tv_privacy_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Currently in privacy mode"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_plant_zzz"
                app:layout_constraintCircle="@+id/iv_bowl"
                app:layout_constraintCircleAngle="40"
                app:layout_constraintCircleRadius="135dp" />

            <ImageView
                android:id="@+id/iv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="@mipmap/home_plant_ninth_dialog_bg"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/iv_bowl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@mipmap/home_plant_three_night_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--去掉加肥-->
            <com.cl.common_base.widget.SvTextView
                android:id="@+id/tv_feef"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="45dp"
                android:gravity="center"
                android:text="Feed"
                android:textColor="@color/mainColor"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/iv_bowl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_bowl"
                app:svRadius="180dp"
                app:svSolidColor="@color/white"
                app:svSolidType="solid" />

            <ImageView
                android:id="@+id/iv_door_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_plant_door_toast"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_door_lock_status"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="45dp"
                android:gravity="center"
                android:textColor="@color/mainColor"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/iv_bowl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_bowl"
                app:svRadius="180dp"
                app:svSolidColor="@color/white"
                app:svSolidType="solid" />


            <com.cl.common_base.widget.ripple.RippleView
                android:id="@+id/iv_four"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:button="@null"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility='@{viewModel.userDetail.data.isVip == 1 ? viewModel.unReadMessageNumber == 0 ? View.GONE : viewModel.userDetail.data.isVip == 1 ? View.VISIBLE : View.GONE : View.GONE}'
                app:layout_constraintBottom_toBottomOf="@+id/iv_support"
                app:layout_constraintEnd_toEndOf="@+id/iv_support"
                app:layout_constraintStart_toStartOf="@+id/iv_support"
                app:layout_constraintTop_toTopOf="@+id/iv_support"
                app:ripple_circle_color="@color/white"
                app:ripple_circle_count="2"
                app:ripple_circle_min_radius="10dp"
                app:ripple_circle_start="true"
                app:ripple_circle_style="FILL"
                app:ripple_speed="0.3" />

            <ImageView
                android:id="@+id/iv_support"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="45dp"
                android:background="@mipmap/home_plant_last_support"
                android:gravity="center"
                android:textColor="@color/mainColor"
                app:layout_constraintBottom_toBottomOf="@+id/iv_bowl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_bowl"
                app:svRadius="180dp"
                app:svSolidColor="@color/white"
                app:svSolidType="solid" />


            <TextView
                android:id="@+id/vv_support_number"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:background="@drawable/red_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="@{String.valueOf(viewModel.unReadMessageNumber)}"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility='@{viewModel.userDetail.data.isVip == 1 ? viewModel.unReadMessageNumber == 0 ? View.GONE : viewModel.userDetail.data.isVip == 1 ? View.VISIBLE : View.GONE : View.GONE}'
                app:layout_constraintCircle="@id/iv_support"
                app:layout_constraintCircleAngle="50"
                app:layout_constraintCircleRadius="20dp" />

            <!--去掉加水-->
            <com.cl.common_base.widget.SvTextView
                android:id="@+id/tv_drain"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Drain"
                android:textColor="@color/mainColor"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/tv_feef"
                app:layout_constraintEnd_toEndOf="parent"
                app:svRadius="180dp"
                app:svSolidColor="@color/white"
                app:svSolidType="solid" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_continue"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="42dp"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/iv_bowl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/ll_root"
                    android:layout_width="261dp"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/home_pair_bg"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="12dp"
                        android:background="@mipmap/iv_close"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_pop_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="17dp"
                        android:text="Congrats—everything is ready to go. Let’s get started! "
                        android:textColor="#161B19"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.cl.common_base.widget.SvTextView
                        android:id="@+id/tv_btn_desc"
                        onSingleClick="@{()-> viewModel.bubbleOnClickEvent()}"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="19dp"
                        android:gravity="center"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:text="Start Journey"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:svRadius="16dp"
                        app:svSolidColor="#008961"
                        app:svSolidType="solid" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/home_down_bg"
                    app:layout_constraintEnd_toEndOf="@id/ll_root"
                    app:layout_constraintStart_toStartOf="@id/ll_root"
                    app:layout_constraintTop_toBottomOf="@+id/ll_root" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--种子发芽阶段才会显示的倒计时-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_seeding"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:background="@mipmap/home_pair_bg"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/iv_bowl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/tV_html"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="12332123123" />

                <ImageView
                    android:id="@+id/iv_seed"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/home_seed_count_down"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tV_html" />

                <Button
                    android:id="@+id/btn_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/background_button_red_r100"
                    android:text="Skip"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_seed" />

                <Button
                    android:id="@+id/btn_check"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="31dp"
                    android:background="@drawable/background_button_gray_r100"
                    android:text="Check"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/btn_skip" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/image_left_swip"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:background="@mipmap/home_left"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/image_right_swip"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:background="@mipmap/home_right"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_switch_camera"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@mipmap/home_switc_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!--氧气币-->
            <com.cl.common_base.widget.waterview.widget.WaterView
                android:visibility="gone"
                android:id="@+id/water_view"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
              />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_plant_status">

            <top.limuyang2.shadowlayoutlib.ShadowConstraintLayout
                android:layout_marginEnd="10dp"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintEnd_toStartOf="@+id/cl_oxy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                app:l_radius="16dp"
                app:l_shadowAlpha="1"
                app:l_shadowElevation="10dp"
                android:id="@+id/cl_peroid"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/background_white_r16">

                <ImageView
                    android:id="@+id/iv_time_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="9dp"
                    android:background="@mipmap/home_plant_time_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="Period"
                    android:textColor="@color/mainColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/iv_time_bg"
                    app:layout_constraintStart_toEndOf="@+id/iv_time_bg"
                    app:layout_constraintTop_toTopOf="@+id/iv_time_bg" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:background="@mipmap/home_plant_indicator_light"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_period"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_period" />

                <View
                    android:id="@+id/vv_period_bg"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/lineBg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_period" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_week_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="22dp"
                    android:gravity="start"
                    android:text="Week-\nDay-"
                    android:textColor="#161B19"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vv_period_bg"
                    tools:text="Week24\nDay1" />

            </top.limuyang2.shadowlayoutlib.ShadowConstraintLayout>

            <top.limuyang2.shadowlayoutlib.ShadowConstraintLayout
                app:l_radius="16dp"
                app:l_shadowAlpha="1"
                app:l_shadowElevation="10dp"
                android:background="@drawable/background_white_r16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/cl_peroid"
                app:layout_constraintEnd_toStartOf="@id/cl_envir"
                android:id="@+id/cl_oxy"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_ox_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
