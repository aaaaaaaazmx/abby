<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.cl.common_base.bean.EnvironmentInfoData" />

        <variable
            name="adapter"
            type="com.cl.modules_home.adapter.HomeEnvirPopAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="17dp"
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@mipmap/home_period_green">

        <TextView
            android:textStyle="bold"
            text="@{data.detectionValue}"
            android:id="@+id/period_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:textColor="@color/mainColor"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Vegetation" />

        <TextView
            android:textStyle="bold"
            text="@{data.healthStatus}"
            android:id="@+id/period_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="13dp"
            android:textColor="@{adapter.getColor(data.healthStatus)}"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Week5 Day5" />

        <TextView
            text="@{data.value}"
            android:id="@+id/tv_going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/period_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/period_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>