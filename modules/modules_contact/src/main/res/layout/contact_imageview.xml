<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        tools:ignore="MissingConstraints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            tools:background="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/iv_imageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:background="@drawable/contact_chooser_pic_bg"
            android:id="@+id/iv_bg"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@id/iv_imageview"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="@id/iv_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_number"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bg"
            app:layout_constraintEnd_toEndOf="@+id/iv_bg"
            app:layout_constraintStart_toStartOf="@+id/iv_bg"
            app:layout_constraintTop_toTopOf="@+id/iv_bg"
            android:background="@drawable/contact_chooser_pic_num_bg"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>