<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/frame1"
            app:layout_constraintBottom_toBottomOf="@id/frame1"
            app:layout_constraintTop_toTopOf="@+id/frame1"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="textView1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame1"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:background="@drawable/background_plant_custom_r1"
            android:layout_width="wrap_content"
            android:layout_height="22dp">
            <EditText
                android:singleLine="true"
                android:ellipsize="end"
                android:maxWidth="280dp"
                android:minWidth="140dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textColorHint="#979797"
                android:textSize="11sp"
                android:background="@null"
                android:id="@+id/editText1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                tools:text="asdasa" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/frame1"
            app:layout_constraintTop_toTopOf="@+id/frame1"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2"
            android:minWidth="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="In" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>