<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints">

        <TextView
            app:layout_constraintBottom_toBottomOf="@id/frame1"
            app:layout_constraintTop_toTopOf="@+id/frame1"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/frame1"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="textView1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView1"
            android:background="@drawable/background_plant_custom_r1"
            android:layout_width="0dp"
            android:layout_height="22dp">
            <EditText
                android:textColor="@color/black"
                android:textColorHint="#979797"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:background="@null"
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="EditText1" />
        </FrameLayout>


        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/frame1"
            app:layout_constraintTop_toTopOf="@+id/frame1"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TextView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>